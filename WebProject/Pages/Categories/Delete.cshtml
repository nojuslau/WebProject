@page
@model WebProject.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <br />
            <input asp-for="Category.Name" name="name" style="width:100%" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <br />
            <input asp-for="Category.DisplayOrder" name="displayOrder" style="width:100%" disabled/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-primary" style="width:150px;">Back to List</a>
    </div>
</form>